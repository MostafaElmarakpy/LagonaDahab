@model IEnumerable<Amenity>



@if (Model != null && Model.Any())
{

	<div class="w-100 card border-0 p-4">
		<div class="card-header bg-success bg-gradient m-lg-0 py-3">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="text-white py-2">Amenity List</h2>
				</div>
			</div>
		</div>
		<div class="card-body border p-4">
			<div class="row pb-3"></div>
			<div class="col-6 offset-6 text-end">
				<a asp-controller="Amenity" asp-action="Create" class="btn btn-secondary">
					<i class="bi bi-plus-circle"></i>  Create New Amenity
				</a>
			</div>
		</div>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Villa Name</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var Amenity in Model)
				{
					<tr>
						<td>@Amenity.Id</td>
						<td>@Amenity.Name</td>
						<td>@Amenity.Villa.Name</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-action="Update" asp-route-amenityId="@Amenity.Id"
								   class="btn btn-success mx-2">
									<i class="bi bi-pencil-square"> Edit</i>
								</a>
								<a asp-action="Delete" asp-route-amenityId="@Amenity.Id"
								   class="btn btn-danger mx-2">
									<i class="bi bi-trash-fill"> Delete</i>
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
}
else
{
	<p class="alert alert-warning">No Amenitys available at the moment.</p>
}
